<div class="content">
  <div id="level-header">
  </div>

  <div id="typewriter" class="baloon" data-level-name="<%= @level.name %>"></div>

  <div class="btn-prev-next">
    <button id="prev-btn">Prev</button>
    <button id="next-btn">Next</button>
  </div>

  <div class="btn-level">
    <%= button_to  "Back to Levels", levels_path, method: :get %>
    <button id="jump">Jump</button>
  </div>

  <div id="examples">
  </div>
</div>
<div class="box-exercise showVsCode" data-controller="iframe">
  <div class="box-codes" style="height: 100vh;">
    <div>
      <button class="btn-css">CSS</button><button class="btn-html">HTML</button>
    </div>
    <div class="css-code">
      <div class="line-numbers">1<br>2<br>3<br>4<br>5<br>6<br>7<br>8<br>9<br>10</div>
      <div>
      <pre class="before">
Hello
      </pre>
      <form autocomplete="off" id="box-answer" action="#">
        <input id="answer" data-answer="<%= @level.correction %>" data-action='keyup->iframe#validation' type="text">
      </form>
      <pre class="after">
how are you
      </pre>
      </div>
    </div>
    <div class="html-code disable">
      <div class="line-numbers">1<br>2<br>3<br>4<br>5<br>6<br>7<br>8<br>9<br>10</div>
      <pre class="code">
Ol√°
tudo bom
      </pre>
    </div>
  </div>
  <div id="iframes">
    <iframe src="<%= level_example_url(@level.examples.first) %>" data-example="<%= @level.examples.first.content %>" data-tgt='<%= @level.examples.first.target %>' data-target='iframe.frame' id="iframe-question" class="frame" frameborder="0" allowfullscreen="true">
    </iframe>
  </div> 
</div>