<div class="content">
  <div id="level-header">
  </div>

  <div id="typewriter" class="nes-container is-rounded is-dark" data-level-name="<%= @level.name %>"></div>

  <div class="btn-prev-next">
    <button id="prev-btn" class="nes-btn my-3">Prev</button>
    <button id="next-btn" class="nes-btn my-3">Next</button>
  </div>

  <div class="btn-level">
    <%= button_to  "Back to Levels", levels_path, class: "nes-btn", method: :get %>
    <button id="jump" class="disable nes-btn">Skip intro</button>
  </div>

  <div id="examples" class="nes-container is-dark is-rounded">
  </div>
</div>

<div class="box-exercise" data-controller="iframe">
  <div class="box-codes" style="height: 70%; margin-left: 10px; width: auto;">
    <div class="buttons-boxcode">
      <button class="btn-css">CSS</button><button class="btn-html">HTML</button>
    </div>
    <div class="css-code">
      <div class="before">
      </div>
      <form autocomplete="off" id="box-answer" data-action="submit->iframe#validation" remote="true">
        <input autofocus data-target='iframe.input' id="answer" data-answer="<%= @level.correction %>" data-action='keyup->iframe#style' class="nes-input is-rounded" type="text">
      </form>
      <div class="after">
      </div>
    </div>
    <div class="html-code disable">
      <div class="code">
      </div>
    </div>
    <button class="next" type="submit" form="box-answer">Next</button>
  </div>
  <div id="iframes">
    <iframe src="<%= level_example_url(@level.examples.first) %>" data-example="<%= @level.examples.first.content %>" data-tgt='<%= @level.examples.first.target %>' data-target='iframe.frame' id="iframe-question" class="frame" frameborder="0" allowfullscreen="true">
    </iframe>
  </div> 

  <div id="modal-menu" class="modal" data-action='click@window->iframe#close' data-target='iframe.modal'>
    <div class="modal-content nes-container is-dark is-rounded">
      <h1>Level complete</h1>
      <br />
      <%= button_to  "Next level", user_record_path(@user_record), class:"nes-btn", method: :patch %>
    </div>
  </div>
</div>
